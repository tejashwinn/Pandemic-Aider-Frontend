<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="310.0" prefWidth="280.0"
            xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pandemic.aider.client.ui.log.old.SignInController">
    <children>
        <VBox prefHeight="310.0" prefWidth="280.0">
            <children>
                <Label fx:id="signInWarningLabel" alignment="CENTER" prefHeight="23.0" prefWidth="274.0" textFill="RED">
                    <padding>
                        <Insets bottom="10.0" top="10.0"/>
                    </padding>
                </Label>
                <HBox>
                    <children>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                            <image>
                                <Image url="@../../../res/icons8-user-24-black.png"/>
                            </image>
                        </ImageView>
                        <TextField fx:id="usernameTextField" prefHeight="26.0" prefWidth="224.0"
                                   promptText="Enter Username">
                            <HBox.margin>
                                <Insets bottom="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                        </TextField>
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../res/icons8-password-30-black.png"/>
                            </image>
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                        </ImageView>
                        <StackPane>
                            <children>
                                <TextField fx:id="passwordTextField" prefHeight="26.0" prefWidth="230.0"
                                           promptText="Enter Password">
                                    <StackPane.margin>
                                        <Insets bottom="10.0" right="10.0" top="10.0"/>
                                    </StackPane.margin>
                                </TextField>
                                <PasswordField fx:id="passwordHiddenField" prefHeight="24.0" prefWidth="200.0"
                                               promptText="Enter Password">
                                    <StackPane.margin>
                                        <Insets bottom="10.0" right="10.0" top="10.0"/>
                                    </StackPane.margin>
                                </PasswordField>
                            </children>
                        </StackPane>
                    </children>
                </HBox>
                <CheckBox fx:id="passwordCheckBoxToggle" mnemonicParsing="false" onAction="#showPassword"
                          text="Show Password">
                    <VBox.margin>
                        <Insets bottom="10.0" left="44.0" right="10.0" top="5.0"/>
                    </VBox.margin>
                </CheckBox>
                <VBox prefHeight="142.0" prefWidth="280.0" spacing="10.0" style="-fx-alignment: center;">
                    <children>
                        <HBox alignment="CENTER" prefHeight="40.0" prefWidth="280.0" spacing="20.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#checkCorrectCredentials" prefHeight="35.0"
                                        prefWidth="90.0" text="Sign In"/>
                                <Label text="OR"/>
                                <Button mnemonicParsing="false" onAction="#switchToSignUp" prefHeight="35.0"
                                        prefWidth="90.0" text="Sign Up"/>
                            </children>
                            <padding>
                                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                            </padding>
                        </HBox>
                        <Separator prefHeight="6.0" prefWidth="276.0"/>
                        <Button mnemonicParsing="false" onAction="#cancelSignInAction" prefHeight="30.0"
                                prefWidth="115.0" text="Cancel"/>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
